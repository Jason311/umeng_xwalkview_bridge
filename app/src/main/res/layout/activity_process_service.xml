<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/service_1_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="启动多进程service1" />
        <Button
            android:id="@+id/service_2_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="启动多进程service2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/process_activity1_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="在SERVICE1进程中启用多进程ACTIVITY1"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/process_activity2_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="在SERVICE2进程中启用多进程ACTIVITY2"
        android:layout_marginLeft="10dp"/>

</LinearLayout>
